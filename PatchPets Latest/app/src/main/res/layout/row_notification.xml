<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="@dimen/scale_60"
        android:layout_height="@dimen/scale_60"
        android:layout_marginLeft="@dimen/margin_30"
        android:background="@drawable/select_contact_check_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.patchpets.utils.MyTextView
        android:id="@+id/tvNotificationMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20"
        android:text="John Doe"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/textSize_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivNotification"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:font="@string/font_poppins_regular" />

    <com.patchpets.utils.MyTextView
        android:id="@+id/tvNotificationTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2 hr ago"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/textSize_14"
        app:layout_constraintLeft_toLeftOf="@+id/tvNotificationMsg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNotificationMsg"
        app:layout_constraintVertical_chainStyle="packed"
        app:font="@string/font_poppins_regular" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/scale_1"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/number_not_selected_setupprofile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivNotification" />
</android.support.constraint.ConstraintLayout>
