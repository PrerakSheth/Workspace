<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mytextview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/header">

        <ImageButton
            android:id="@+id/ibtnLeftOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="@dimen/scale_10dp"
            android:scaleType="fitXY"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibtnLeftTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ibtnLeftOne"
            android:adjustViewBounds="true"
            android:background="@android:color/black"
            android:paddingBottom="@dimen/scale_8dp"
            android:paddingTop="@dimen/scale_8dp"
            android:scaleType="fitXY"
            android:visibility="invisible" />

        <com.konkr.Utils.MyTextView
            android:id="@+id/tvTitle"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/_18ssp"
            android:visibility="invisible"
            mytextview:txt_custom_font="@string/font_mavenpro_medium" />

        <ImageButton
            android:id="@+id/ibtnRightOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/scale_8dp"
            android:layout_toStartOf="@+id/ibtnRightTwo"
            android:adjustViewBounds="true"
            android:background="@null"
            android:paddingBottom="@dimen/scale_10dp"
            android:paddingTop="@dimen/scale_10dp"
            android:scaleType="fitXY"
            android:visibility="invisible" />



        <ImageButton
            android:id="@+id/ibtnRightTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="@dimen/scale_10dp"
            android:paddingBottom="@dimen/scale_8dp"
            android:paddingRight="@dimen/scale_10dp"
            android:paddingTop="@dimen/scale_8dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <com.konkr.Utils.MyTextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="@dimen/scale_10dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14ssp"
            android:visibility="invisible"
            mytextview:txt_custom_font="@string/font_mavenpro_bold" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>