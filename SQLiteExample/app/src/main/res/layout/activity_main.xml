<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sqlite.Activity.MainActivity">


    <EditText
        android:id="@+id/_edittextName"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/_buttonAdd"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/_edittextName"
        android:onClick="onAddclick"
        android:text="Add" />

    <Button
        android:id="@+id/_buttonGet"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/_edittextName"
        android:layout_toRightOf="@+id/_buttonAdd"
        android:onClick="onGetclick"
        android:text="Get" />

    <ListView
        android:id="@+id/_listview"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_buttonGet">

    </ListView>
</RelativeLayout>
