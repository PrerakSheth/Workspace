            <!--app:roundAsCircle="true"-->
            <!--app:roundingBorderColor="@color/white"-->
            <!--app:roundingBorderWidth="@dimen/_1sdp" />-->
        <ImageView
            android:id="@+id/ivWorkouts"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.konkr.Utils.MyTextView
            android:id="@+id/tvWorkOutName"
            style="@style/MyTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="Pullup to Knee Raise"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintLeft_toRightOf="@+id/ivWorkouts"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            mytextview:txt_custom_font="@string/font_mavenpro_bold" />

        <com.konkr.Utils.MyTextView
            android:id="@+id/tvWorkOutCategory"
            style="@style/MyTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="Abs Workout"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintLeft_toRightOf="@+id/ivWorkouts"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWorkOutName"
            mytextview:txt_custom_font="@string/font_poppins_light" />

        <com.konkr.Utils.MyTextView
            android:id="@+id/tvEstTime"
            style="@style/MyTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="Est : 15minutes"
            android:textColor="@color/text_color_light_grey"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ivWorkouts"
            app:layout_constraintRight_toLeftOf="@+id/tvExeType"
            app:layout_constraintTop_toBottomOf="@+id/tvWorkOutCategory"
            mytextview:txt_custom_font="@string/font_poppins_light" />

        <com.konkr.Utils.MyTextView
            android:id="@+id/tvExeType"
            style="@style/MyTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:ellipsize="end"
            android:gravity="end"
            android:singleLine="true"
            android:text="Lower ab"
            android:textColor="@color/text_color_light_grey"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvEstTime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWorkOutCategory"
            mytextview:txt_custom_font="@string/font_poppins_light" />
    </android.support.constraint.ConstraintLayout>
</layout>


