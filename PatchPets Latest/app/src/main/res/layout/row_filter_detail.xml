<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.patchpets.utils.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/scale_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_22"
        android:layout_marginRight="@dimen/margin_15"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_15"
        android:text="label_setupcard"
        android:textColor="@color/tab_bg_color"
        android:textSize="@dimen/textSize_20"
        app:font="@string/font_poppins_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/check"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="@dimen/scale_60"
        android:layout_height="wrap_content"
        android:button="@drawable/checkboxstate"
        android:padding="@dimen/padding_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title" />

    <View
        android:id="@+id/view_breed"
        android:layout_width="@dimen/scale_0"
        android:layout_height="@dimen/scale_1"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />
</android.support.constraint.ConstraintLayout>
